<base:LecgWindow x:Class="LECG.Views.OffsetElevationsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:LECG.Views.Base"
    xmlns:utils="clr-namespace:LECG.Utils"
    xmlns:icons="clr-namespace:LECG.Utils"
    xmlns:comp="clr-namespace:LECG.Views.Components" Title="OFFSET ELEVATIONS" SizeToContent="Height" Width="420" WindowIcon="{x:Static icons:Icons.ArrowUpDown}" WindowStartupLocation="CenterScreen">

    <base:LecgWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LECG;component/src/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </base:LecgWindow.Resources>

    <Grid Margin="{DynamicResource ViewContentMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="{DynamicResource HeaderMargin}">
            <TextBlock Text="Offset Elevations" FontWeight="{DynamicResource WeightBold}" FontSize="{DynamicResource FontSizeTitle}" Foreground="{DynamicResource TextPrimaryBrush}" Margin="{DynamicResource TitleMargin}"/>
            <TextBlock Text="Enter offset value and choose direction. Then select elements." FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Value Input -->
        <Border Grid.Row="1" Style="{DynamicResource CardStyle}" Padding="16" Margin="{DynamicResource HeaderMargin}">
            <StackPanel>
                <TextBlock Text="OFFSET VALUE (PROJECT UNITS)" Style="{DynamicResource CardHeaderStyle}"/>
                <Border CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1.5" Background="{DynamicResource PanelBackgroundBrush}">
                    <TextBox x:Name="TxtValue" Text="{Binding OffsetValue, StringFormat=N2}" FontSize="{DynamicResource FontSizeExtraLarge}" FontWeight="{DynamicResource WeightBold}" Foreground="{DynamicResource TextPrimaryBrush}" Background="Transparent" BorderThickness="0" Padding="12,10" HorizontalContentAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Selection -->
        <Border Grid.Row="2" Style="{DynamicResource CardStyle}" Padding="16" Margin="{DynamicResource HeaderMargin}">
            <StackPanel>
                <TextBlock Text="SELECTION" Style="{DynamicResource LabelStyle}" Margin="0,0,0,4" Opacity="0.5"/>
                <comp:SelectionControl DataContext="{Binding Selection}"/>
            </StackPanel>
        </Border>

        <!-- Direction Buttons -->
        <Grid Grid.Row="3" Margin="{DynamicResource HeaderMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Add Button -->
            <Button Grid.Column="0" Height="{DynamicResource ButtonHeightLarge}" Command="{Binding ExecuteAddCommand}" IsEnabled="{Binding CanRun}" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{DynamicResource SuccessBrush}" CornerRadius="10" Padding="16">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path Data="{x:Static icons:Icons.Plus}" Stroke="White" StrokeThickness="2.5" Width="{DynamicResource IconSizeAction}" Height="{DynamicResource IconSizeAction}" Stretch="Uniform" Margin="0,0,10,0"/>
                                <TextBlock Text="Add" FontSize="{DynamicResource FontSizeMediumLarge}" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Subtract Button -->
            <Button Grid.Column="2" Height="{DynamicResource ButtonHeightLarge}" Command="{Binding ExecuteSubtractCommand}" IsEnabled="{Binding CanRun}" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{DynamicResource AlertBrush}" CornerRadius="10" Padding="16">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path Data="{x:Static icons:Icons.Minus}" Stroke="White" StrokeThickness="2.5" Width="{DynamicResource IconSizeAction}" Height="{DynamicResource IconSizeAction}" Stretch="Uniform" Margin="0,0,10,0"/>
                                <TextBlock Text="Subtract" FontSize="{DynamicResource FontSizeMediumLarge}" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- Cancel Button -->
        <Button Content="Cancel" Grid.Row="4" Height="{DynamicResource ButtonHeight}" Command="{Binding ExecuteCancelCommand}" Style="{DynamicResource SecondaryButtonStyle}"/>
    </Grid>
</base:LecgWindow>
