<base:LecgWindow x:Class="LECG.Views.AlignDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:LECG.Views.Base"
    xmlns:icons="clr-namespace:LECG.Utils" Title="ALIGN ELEMENTS" Height="400" Width="600" WindowStartupLocation="CenterScreen">

    <base:LecgWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LECG;component/src/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </base:LecgWindow.Resources>

    <Grid Margin="{DynamicResource ViewContentMarginLarge}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="{DynamicResource HeaderMargin}">
            <TextBlock Text="ALIGNMENT TOOLS" FontWeight="{DynamicResource WeightBold}" FontSize="{DynamicResource FontSizeTitle}" Foreground="{DynamicResource TextPrimaryBrush}" Margin="{DynamicResource TitleMarginSmall}"/>
            <TextBlock Text="Select an alignment action." FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- 3 Columns for Alignment Types -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Horizontal -->
            <StackPanel Grid.Column="0" Margin="4">
                <TextBlock Text="HORIZONTAL" Style="{DynamicResource LabelStyle}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <Button Style="{DynamicResource DashboardCardStyle}" Height="60" ToolTip="Align Left" Click="AlignLeft_Click" Margin="0,4">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{x:Static icons:Icons.AlignLeft}" Fill="{DynamicResource TextPrimaryBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Left" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{DynamicResource DashboardCardStyle}" Height="60" ToolTip="Align Center" Click="AlignCenter_Click" Margin="0,4">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{x:Static icons:Icons.AlignCenter}" Fill="{DynamicResource TextPrimaryBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{DynamicResource DashboardCardStyle}" Height="60" ToolTip="Align Right" Click="AlignRight_Click" Margin="0,4">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{x:Static icons:Icons.AlignRight}" Fill="{DynamicResource TextPrimaryBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Vertical -->
            <StackPanel Grid.Column="1" Margin="4">
                <TextBlock Text="VERTICAL" Style="{DynamicResource LabelStyle}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <Button Style="{DynamicResource DashboardCardStyle}" Height="60" ToolTip="Align Top" Click="AlignTop_Click" Margin="0,4">
                    <StackPanel Orientation="Horizontal">
                        <!-- Rotation for vertical icon simulation -->
                        <Path Data="{x:Static icons:Icons.AlignLeft}" Fill="{DynamicResource TextPrimaryBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform Angle="90"/>
                            </Path.RenderTransform>
                        </Path>
                        <TextBlock Text="Top" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{DynamicResource DashboardCardStyle}" Height="60" ToolTip="Align Middle" Click="AlignMiddle_Click" Margin="0,4">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{x:Static icons:Icons.AlignCenter}" Fill="{DynamicResource TextPrimaryBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform Angle="90"/>
                            </Path.RenderTransform>
                        </Path>
                        <TextBlock Text="Middle" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{DynamicResource DashboardCardStyle}" Height="60" ToolTip="Align Bottom" Click="AlignBottom_Click" Margin="0,4">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{x:Static icons:Icons.AlignRight}" Fill="{DynamicResource TextPrimaryBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform Angle="90"/>
                            </Path.RenderTransform>
                        </Path>
                        <TextBlock Text="Bottom" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Distribute -->
            <StackPanel Grid.Column="2" Margin="4">
                <TextBlock Text="DISTRIBUTE" Style="{DynamicResource LabelStyle}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <Button Style="{DynamicResource DashboardCardStyle}" Height="60" ToolTip="Distribute Horizontally" Click="DistributeH_Click" Margin="0,4">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{x:Static icons:Icons.AlignLeft}" Fill="{DynamicResource TextPrimaryBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Horizontal" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{DynamicResource DashboardCardStyle}" Height="60" ToolTip="Distribute Vertically" Click="DistributeV_Click" Margin="0,4">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{x:Static icons:Icons.AlignLeft}" Fill="{DynamicResource TextPrimaryBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform Angle="90"/>
                            </Path.RenderTransform>
                        </Path>
                        <TextBlock Text="Vertical" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</base:LecgWindow>
