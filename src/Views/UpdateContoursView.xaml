<base:LecgWindow x:Class="LECG.Views.UpdateContoursView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:LECG.Views.Base"
    xmlns:utils="clr-namespace:LECG.Utils"
    xmlns:icons="clr-namespace:LECG.Utils" Title="UPDATE CONTOURS (LAYERS)" Height="450" Width="400" WindowIcon="{x:Static icons:Icons.Layers}" WindowStartupLocation="CenterScreen">

    <base:LecgWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LECG;component/src/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </base:LecgWindow.Resources>

    <Grid Margin="{StaticResource ViewContentMarginLarge}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Mode Toggle -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="{StaticResource HeaderMargin}">
            <TextBlock Text="UPDATE CONTOURS" FontWeight="{StaticResource WeightBold}" FontSize="{StaticResource FontSizeTitle}" Foreground="{StaticResource TextPrimaryBrush}" Margin="{StaticResource TitleMargin}"/>
            <TextBlock Text="Configure contour display on Toposolids." FontSize="{StaticResource FontSizeSmall}" Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Mode Toggle -->
        <Border Grid.Row="1" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="{StaticResource ButtonCornerRadius}" Padding="15" Margin="0,10,0,10">
            <StackPanel>
                <TextBlock Text="Mode" FontWeight="{StaticResource WeightSemiBold}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="ApplyModeRadio" Content="Apply Contours" IsChecked="{Binding IsApplyMode}" GroupName="Mode" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,20,0" Cursor="Hand"/>
                    <RadioButton x:Name="RemoveModeRadio" Content="Remove Contours" GroupName="Mode" Foreground="{StaticResource TextPrimaryBrush}" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Toposolid Types -->
            <Border Grid.Column="0" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="{StaticResource ButtonCornerRadius}" Padding="15" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header with expand toggle -->
                    <Button Command="{Binding ToggleTypesExpandedCommand}" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="▼" FontSize="10" Margin="0,0,6,0" VerticalAlignment="Center" Foreground="{StaticResource TextMutedBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTypesExpanded}" Value="False">
                                                <Setter Property="Text" Value="▶"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="Target Toposolid Types" FontWeight="{StaticResource WeightSemiBold}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}"/>
                        </StackPanel>
                    </Button>

                    <!-- Check/Uncheck buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,8" Visibility="{Binding IsTypesExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Content="Check All" Command="{Binding CheckAllCommand}" Style="{StaticResource SecondaryButtonStyle}" Padding="8,4" Margin="0,0,5,0" FontSize="11"/>
                        <Button Content="Uncheck All" Command="{Binding UncheckAllCommand}" Style="{StaticResource SecondaryButtonStyle}" Padding="8,4" FontSize="11"/>
                    </StackPanel>

                    <!-- Types list -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Visibility="{Binding IsTypesExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding ToposolidTypes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Style="{StaticResource ModernCheckboxStyle}" Margin="0,3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Contour Settings (Only visible in Apply Mode) -->
            <Border Grid.Column="1" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="{StaticResource ButtonCornerRadius}" Padding="15" Margin="5,0,0,0" IsEnabled="{Binding IsApplyMode}">
                <StackPanel>
                    <TextBlock Text="Contour Settings" FontWeight="{StaticResource WeightSemiBold}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}" Margin="0,0,0,12"/>

                    <!-- Primary Contours -->
                    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,10">
                        <StackPanel>
                            <CheckBox Content="Primary Contours" IsChecked="{Binding EnablePrimary}" Style="{StaticResource ModernCheckboxStyle}" FontWeight="{StaticResource WeightSemiBold}" Margin="0,0,0,8"/>
                            <Grid IsEnabled="{Binding EnablePrimary}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Interval:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}"/>
                                <TextBox Grid.Column="1" Text="{Binding PrimaryInterval, UpdateSourceTrigger=PropertyChanged}" Height="28" Margin="8,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="m" VerticalAlignment="Center" Foreground="{StaticResource TextMutedBrush}" FontSize="{StaticResource FontSizeSmall}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Secondary Contours -->
                    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <CheckBox Content="Secondary Contours" IsChecked="{Binding EnableSecondary}" Style="{StaticResource ModernCheckboxStyle}" FontWeight="{StaticResource WeightSemiBold}" Margin="0,0,0,8"/>
                            <Grid IsEnabled="{Binding EnableSecondary}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Interval:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}"/>
                                <TextBox Grid.Column="1" Text="{Binding SecondaryInterval, UpdateSourceTrigger=PropertyChanged}" Height="28" Margin="8,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="m" VerticalAlignment="Center" Foreground="{StaticResource TextMutedBrush}" FontSize="{StaticResource FontSizeSmall}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Fixed range note -->
                    <TextBlock Text="Range: 0 - 6000m (fixed)" FontStyle="Italic" Foreground="{StaticResource TextMutedBrush}" FontSize="{StaticResource FontSizeSmall}" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Command="{Binding DoCancelCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="100" Height="{StaticResource ButtonHeight}" Margin="0,0,10,0"/>
            <Button Content="Run" Command="{Binding RunCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="120" Height="{StaticResource ButtonHeight}"/>
        </StackPanel>
    </Grid>

</base:LecgWindow>
