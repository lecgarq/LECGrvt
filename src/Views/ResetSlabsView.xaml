<base:LecgWindow x:Class="LECG.Views.ResetSlabsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:LECG.Views.Base"
    xmlns:utils="clr-namespace:LECG.Utils"
    xmlns:comp="clr-namespace:LECG.Views.Components"
    xmlns:icons="clr-namespace:LECG.Utils" Title="RESET SLABS" Height="320" Width="400" WindowIcon="{x:Static icons:Icons.ResetSlabs}" WindowStartupLocation="CenterScreen">

    <base:LecgWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LECG;component/src/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </base:LecgWindow.Resources>

    <Grid Margin="{DynamicResource ViewContentMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="{DynamicResource HeaderMargin}">
            <TextBlock Text="Reset Slab Shapes" FontWeight="{DynamicResource WeightBold}" FontSize="{DynamicResource FontSizeTitle}" Foreground="{DynamicResource TextPrimaryBrush}" Margin="{DynamicResource TitleMargin}"/>
            <TextBlock Text="Reset Toposolid or Floor shape edits." FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Selection -->
        <Border Grid.Row="1" Style="{DynamicResource CardStyle}" Padding="16" Margin="{DynamicResource HeaderMargin}">
            <StackPanel>
                <TextBlock Text="SELECTION" Style="{DynamicResource LabelStyle}" Margin="0,0,0,4" Opacity="0.5"/>
                <comp:SelectionControl DataContext="{Binding Selection}"/>
            </StackPanel>
        </Border>

        <!-- Options -->
        <Border Grid.Row="2" Style="{DynamicResource CardStyle}" VerticalAlignment="Top" Margin="{DynamicResource HeaderMargin}">
            <StackPanel>
                <TextBlock Text="OPTIONS" Style="{DynamicResource CardHeaderStyle}"/>
                <CheckBox Content="Duplicate elements before resetting" IsChecked="{Binding DuplicateElements, Mode=TwoWay}" Style="{DynamicResource ModernCheckboxStyle}"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="{DynamicResource ButtonRowMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Cancel" Grid.Column="0" Height="{DynamicResource ButtonHeight}" Command="{Binding ExecuteCancelCommand}" Style="{DynamicResource SecondaryButtonStyle}"/>

            <Button Content="Reset" Grid.Column="2" Height="{DynamicResource ButtonHeight}" Command="{Binding ExecuteRunCommand}" IsEnabled="{Binding CanRun}" Style="{DynamicResource PrimaryButtonStyle}"/>
        </Grid>
    </Grid>
</base:LecgWindow>
