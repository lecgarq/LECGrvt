<base:LecgWindow x:Class="LECG.Views.FilterCopyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:LECG.Views.Base"
    xmlns:utils="clr-namespace:LECG.Utils"
    xmlns:vm="clr-namespace:LECG.ViewModels" Title="{Binding Title}" Height="750" Width="1050" WindowStartupLocation="CenterScreen" Style="{DynamicResource LecgWindowStyle}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LECG;component/src/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <utils:BoolToVisibilityConverter x:Key="BoolToVis"/>
            <utils:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
            <utils:FilterStatusConverter x:Key="StatusColor"/>

            <Style x:Key="BulkActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Width" Value="32"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Margin" Value="0,2"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F1F5F9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="FilterTreeViewItemStyle" TargetType="TreeViewItem">
                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVis}}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="0,2"/>
                <Style.Resources>
                    <!-- Fix selection backgrounds to white/transparent but keep text dark -->
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="{DynamicResource ColorTextPrimary}" />
                </Style.Resources>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <!-- Force Foreground to stay dark when selected -->
                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Area -->
        <Grid Grid.Row="0" Margin="0,0,0,25">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Filter Copy" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Synchronize view filters across your project templates and views." FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Workspace -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Source Panel -->
            <Border Grid.Column="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.ColumnSpan="2" Text="SOURCE REPOSITORY" FontWeight="ExtraBold" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,15"/>

                    <ComboBox Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding SourceTypes}" SelectedItem="{Binding LeftSourceType}" Margin="0,0,0,12" Height="36" VerticalContentAlignment="Center"/>

                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="LeftSearchBox" Text="{Binding LeftFilterText, UpdateSourceTrigger=PropertyChanged}" Tag="Search views or filters..." VerticalContentAlignment="Center" Height="36" Padding="10,0"/>
                        <Button Grid.Column="1" Content="ACTIVE VIEW" Command="{Binding SetActiveViewCommand}" CommandParameter="Left" Margin="8,0,0,0" Width="90" Height="36" Style="{DynamicResource TertiaryButtonStyle}" FontSize="10" FontWeight="Bold"/>
                    </Grid>

                    <!-- Bulk Buttons Left -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top">
                        <Button Style="{StaticResource BulkActionButtonStyle}" Command="{Binding BulkCommand}" CommandParameter="Left:Collapse" ToolTip="Collapse All">
                            <Path Data="{x:Static utils:Icons.Minimize}" Fill="{DynamicResource TextSecondaryBrush}" Stretch="Uniform" Width="14"/>
                        </Button>
                        <Button Style="{StaticResource BulkActionButtonStyle}" Command="{Binding BulkCommand}" CommandParameter="Left:Expand" ToolTip="Expand All">
                            <Path Data="{x:Static utils:Icons.Plus}" Fill="{DynamicResource TextSecondaryBrush}" Stretch="Uniform" Width="14"/>
                        </Button>
                        <Button Style="{StaticResource BulkActionButtonStyle}" Command="{Binding BulkCommand}" CommandParameter="Left:Check" ToolTip="Select All Filters" Margin="0,15,0,2">
                            <Path Data="{x:Static utils:Icons.CircleCheck}" Fill="{DynamicResource PrimaryAccentBrush}" Stretch="Uniform" Width="16"/>
                        </Button>
                        <Button Style="{StaticResource BulkActionButtonStyle}" Command="{Binding BulkCommand}" CommandParameter="Left:Uncheck" ToolTip="Unselect All">
                            <Path Data="{x:Static utils:Icons.Circle}" Fill="{DynamicResource TextMutedBrush}" Stretch="Uniform" Width="16"/>
                        </Button>
                    </StackPanel>

                    <TreeView Grid.Row="3" Grid.Column="1" ItemsSource="{Binding LeftItems}" BorderThickness="0" Background="Transparent" ItemContainerStyle="{StaticResource FilterTreeViewItemStyle}" VirtualizingStackPanel.IsVirtualizing="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type vm:ViewContainer}" ItemsSource="{Binding Filters}">
                                <Border Background="Transparent" Padding="4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13" Foreground="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=Foreground}"/>
                                        <Border Visibility="{Binding IsTemplate, Converter={StaticResource BoolToVis}}" Background="#EEF2FF" CornerRadius="6" Padding="6,2" Margin="10,0,0,0">
                                            <TextBlock Text="TEMPLATE" FontSize="9" FontWeight="Black" Foreground="#4F46E5"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </HierarchicalDataTemplate>

                            <DataTemplate DataType="{x:Type vm:FilterItem}">
                                <Border Background="Transparent" Padding="8,4" Margin="2,1,0,1" CornerRadius="8">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsSelected}" Style="{DynamicResource ModernCheckboxStyle}" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Transfer Area -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Command="{Binding TransferCommand}" Width="48" Height="48" Style="{DynamicResource PrimaryButtonStyle}" ToolTip="Transfer selected filters" Cursor="Hand">
                    <Path Data="{x:Static utils:Icons.Copy}" Fill="White" Stretch="Uniform" Width="20" Height="20"/>
                </Button>
            </StackPanel>

            <!-- Target Panel -->
            <Border Grid.Column="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.ColumnSpan="2" Text="TARGET DESTINATIONS" FontWeight="ExtraBold" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,15"/>

                    <ComboBox Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding SourceTypes}" SelectedItem="{Binding RightSourceType}" Margin="0,0,0,12" Height="36" VerticalContentAlignment="Center"/>

                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="RightSearchBox" Text="{Binding RightFilterText, UpdateSourceTrigger=PropertyChanged}" Tag="Search views or filters..." VerticalContentAlignment="Center" Height="36" Padding="10,0"/>
                        <Button Grid.Column="1" Content="ACTIVE VIEW" Command="{Binding SetActiveViewCommand}" CommandParameter="Right" Margin="8,0,0,0" Width="90" Height="36" Style="{DynamicResource TertiaryButtonStyle}" FontSize="10" FontWeight="Bold"/>
                    </Grid>

                    <TreeView Grid.Row="3" Grid.Column="0" ItemsSource="{Binding RightItems}" BorderThickness="0" Background="Transparent" ItemContainerStyle="{StaticResource FilterTreeViewItemStyle}" VirtualizingStackPanel.IsVirtualizing="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type vm:ViewContainer}" ItemsSource="{Binding Filters}">
                                <Border Background="Transparent" Padding="4">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsSelected}" Style="{DynamicResource ModernCheckboxStyle}" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13" Margin="8,0,0,0" Foreground="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=Foreground}"/>
                                    </StackPanel>
                                </Border>
                            </HierarchicalDataTemplate>

                            <DataTemplate DataType="{x:Type vm:FilterItem}">
                                <Border BorderThickness="4,0,0,0" BorderBrush="{Binding Status, Converter={StaticResource StatusColor}}" Background="#F8FAFC" CornerRadius="6" Margin="25,2,5,2" Padding="12,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}"/>

                                        <Button Grid.Column="1" Command="{Binding DataContext.ToggleRemoveCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Width="28" Height="28" Cursor="Hand">
                                            <Path Stretch="Uniform" Width="12" Height="12">
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Setter Property="Data" Value="{x:Static utils:Icons.X}"/>
                                                        <Setter Property="Fill" Value="{DynamicResource AlertBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Removable">
                                                                <Setter Property="Data" Value="{x:Static utils:Icons.ResetSlabs}"/>
                                                                <Setter Property="Fill" Value="{DynamicResource TextSecondaryBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </TreeView.Resources>
                    </TreeView>

                    <!-- Bulk Buttons Right -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Top">
                        <Button Style="{StaticResource BulkActionButtonStyle}" Command="{Binding BulkCommand}" CommandParameter="Right:Collapse" ToolTip="Collapse All">
                            <Path Data="{x:Static utils:Icons.Minimize}" Fill="{DynamicResource TextSecondaryBrush}" Stretch="Uniform" Width="14"/>
                        </Button>
                        <Button Style="{StaticResource BulkActionButtonStyle}" Command="{Binding BulkCommand}" CommandParameter="Right:Expand" ToolTip="Expand All">
                            <Path Data="{x:Static utils:Icons.Plus}" Fill="{DynamicResource TextSecondaryBrush}" Stretch="Uniform" Width="14"/>
                        </Button>
                        <Button Style="{StaticResource BulkActionButtonStyle}" Command="{Binding BulkCommand}" CommandParameter="Right:Check" ToolTip="Select All Views" Margin="0,15,0,2">
                            <Path Data="{x:Static utils:Icons.CircleCheck}" Fill="{DynamicResource PrimaryAccentBrush}" Stretch="Uniform" Width="16"/>
                        </Button>
                        <Button Style="{StaticResource BulkActionButtonStyle}" Command="{Binding BulkCommand}" CommandParameter="Right:Uncheck" ToolTip="Unselect All">
                            <Path Data="{x:Static utils:Icons.Circle}" Fill="{DynamicResource TextMutedBrush}" Stretch="Uniform" Width="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer Actions -->
        <Grid Grid.Row="2" Margin="0,30,0,0">
            <TextBlock Text="Modified filters Blue. New filters Green. Deleted Red." VerticalAlignment="Center" FontSize="11" FontStyle="Italic" Foreground="{DynamicResource TextMutedBrush}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="CANCEL" Command="{Binding CancelCommand}" Width="110" Height="44" Margin="0,0,12,0" FontWeight="SemiBold"/>
                <Button Content="APPLY CHANGES" Command="{Binding ApplyCommand}" Width="190" Height="44" Style="{DynamicResource PrimaryButtonStyle}" FontSize="12" FontWeight="Black"/>
            </StackPanel>
        </Grid>
    </Grid>
</base:LecgWindow>
