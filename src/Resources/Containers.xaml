<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:icons="clr-namespace:LECG.Utils">

    <!-- Card Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{DynamicResource ContentCornerRadius}"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="2" Opacity="0.04" Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CardHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="{DynamicResource WeightSemiBold}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <Style x:Key="DashboardCardStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="{DynamicResource ContentCornerRadius}" Margin="6">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="4" Opacity="0.05" Direction="270"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="16"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ContentBackgroundBrush}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PrimaryAccentBrush}"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#1A202C" BlurRadius="16" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Base Window Style - Glass Effect -->
    <Style x:Key="LecgWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
        <Setter Property="SizeToContent" Value="Height"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="44" ResizeBorderThickness="6" GlassFrameThickness="1" CornerRadius="0"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <!-- Solid Container -->
                    <Border CornerRadius="{DynamicResource WindowCornerRadius}" Background="{TemplateBinding Background}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="#1A202C" BlurRadius="24" ShadowDepth="4" Opacity="0.08" Direction="270"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="44"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Title Bar -->
                            <Border Grid.Row="0" Background="Transparent" Padding="14,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon + Title -->
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                                        <!-- Icon -->
                                        <Border Background="{DynamicResource PrimaryAccentBrush}" CornerRadius="{DynamicResource SmallCornerRadius}" Padding="5" Margin="0,0,10,0">
                                            <Path Data="{Binding WindowIcon, RelativeSource={RelativeSource TemplatedParent}}" Fill="White" Width="12" Height="12" Stretch="Uniform"/>
                                        </Border>

                                        <!-- Title -->
                                        <TextBlock Text="{TemplateBinding Title}" FontSize="{DynamicResource FontSizeHeader}" FontWeight="{DynamicResource WeightBold}" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Minimize Button -->
                                    <Button Grid.Column="1" WindowChrome.IsHitTestVisibleInChrome="True" Width="28" Height="28" Background="Transparent" BorderBrush="Transparent" Command="{Binding MinimizeCommand, RelativeSource={RelativeSource AncestorType=Window}}" Cursor="Hand" Margin="0,0,4,0" ToolTip="Minimize">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="Transparent" CornerRadius="{DynamicResource SmallCornerRadius}">
                                                    <Path Data="{x:Static icons:Icons.Minimize}" Stroke="{DynamicResource TextMutedBrush}" StrokeThickness="1.5" Width="10" Height="10" Stretch="Uniform"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="{DynamicResource ContentBackgroundBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Close Button -->
                                    <Button Grid.Column="2" WindowChrome.IsHitTestVisibleInChrome="True" Width="28" Height="28" Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=Window}}" Cursor="Hand" ToolTip="Close">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="Transparent" CornerRadius="{DynamicResource SmallCornerRadius}">
                                                    <Path x:Name="icon" Data="{x:Static icons:Icons.X}" Stroke="{DynamicResource TextMutedBrush}" StrokeThickness="1.5" Width="10" Height="10" Stretch="Uniform"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="{DynamicResource AlertBrush}"/>
                                                        <Setter TargetName="icon" Property="Stroke" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- Content -->
                            <Grid Grid.Row="1" Margin="{DynamicResource WindowPadding}">
                                <ContentPresenter />
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
