    <!-- Brushes referencing Colors -->
    <!-- Brushes referencing Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{DynamicResource ColorWindowBackground}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{DynamicResource ColorPanelBackground}"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{DynamicResource ColorContentBackground}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource ColorBorder}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource ColorPanelBackground}"/>

    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{DynamicResource ColorPrimary}"/>
